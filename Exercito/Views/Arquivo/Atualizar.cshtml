@model Exercito.Models.Cadastro

@{
    ViewBag.Title = "Atualizar";
}

<h2>Atualizar</h2>

@using (Html.BeginForm("Edita", "Arquivo",FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Cadastro</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <input value="@Model.Id_Usuario" name="id" hidden/>
        <div class="form-group">
            @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select class="form-control" name="status">
                    <option value="@Model.Status">@Model.Status</option>
                    <option value="A">Aprovado</option>
                    <option value="P">Pendente</option>
                    <option value="R">Reprovado</option>
                </select> 
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
